<Window x:Class="com.cloud.prospect.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize" ShowInTaskbar="False"
        Title="修改密码" Height="195" Width="225" Icon="/Prospect;component/img/logo.png">
    <Grid>
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="62,10,0,0" Name="pwdOriginal" VerticalAlignment="Top" Width="138" />
        <Label Content="原密码" Height="28" HorizontalAlignment="Left" Margin="12,10,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="新密码" Height="28" HorizontalAlignment="Left" Margin="12,44,0,0" Name="label2" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Right" Margin="0,44,19,0" Name="pwdNew" VerticalAlignment="Top" Width="138" />
        <Label Content="确认密码" Height="28" HorizontalAlignment="Left" Margin="3,78,0,0" Name="label3" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Right" Margin="0,80,19,0" Name="pwdComfirm" VerticalAlignment="Top" Width="135" />
        <Button Content="确定" Height="23" HorizontalAlignment="Left" Margin="15,121,0,0" Name="btnOK" VerticalAlignment="Top" Width="60" Click="btnOK_Click" />
        <Button Content="取消" Height="23" HorizontalAlignment="Left" Margin="130,121,0,0" Name="btnCancel" VerticalAlignment="Top" Width="61" Click="btnCancel_Click" />
    </Grid>
</Window>
